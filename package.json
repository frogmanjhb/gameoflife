{
  "name": "game-of-life-classroom",
  "version": "1.0.0",
  "description": "A classroom Game of Life simulation for teaching financial literacy",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "build": "npm run build:all",
    "build:all": "npm run server:build && npm run client:build",
    "server:build": "cd server && npm run build",
    "client:build": "cd client && npm run build",
    "start": "cd server && npm start",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "railway:init": "railway init",
    "railway:link": "railway link",
    "railway:deploy": "railway up",
    "railway:logs": "railway logs",
    "railway:open": "railway open",
    "db:migrate": "railway run --service backend psql < server/src/database/schema-postgres.sql"
  },
  "keywords": [
    "education",
    "financial-literacy",
    "game-of-life",
    "classroom",
    "railway"
  ],
  "author": "Classroom Game of Life",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "pg": "^8.16.3"
  }
}
